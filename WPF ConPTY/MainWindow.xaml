<Window x:Class="TerminalPoC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terminal PoC" Height="700" Width="900"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        
        <!-- Terminal Output -->
        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#333333" Margin="5">
            <TextBox x:Name="OutputTextBox" 
                     FontFamily="Consolas" 
                     FontSize="14"
                     Background="Black"
                     Foreground="#CCCCCC"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap"
                     Padding="5"/>
        </Border>
        
        <!-- Input Area -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="InputTextBox" 
                     Grid.Column="0"
                     FontFamily="Consolas" 
                     FontSize="14"
                     Padding="5,3"
                     Margin="0,0,5,0"
                     AcceptsReturn="False"
                     KeyDown="InputTextBox_KeyDown"/>
            
            <Button x:Name="SendButton" 
                    Grid.Column="1"
                    Content="Send" 
                    Width="80"
                    Height="30"
                    Click="SendButton_Click"/>
        </Grid>
        
        <!-- Log Output -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#333333" Margin="5">
            <TextBox x:Name="LogTextBox"
                     FontFamily="Consolas"
                     FontSize="12"
                     Background="#1E1E1E"
                     Foreground="#DDDDDD"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto" 
                     TextWrapping="NoWrap"/>
        </Border>
    </Grid>
</Window>